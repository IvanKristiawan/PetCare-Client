            <div class="input-group mb-3">
                <div class="col-md-2">
                    <span class="input-group-text text-light bg-dark" id="inputGroup-sizing-default">Kontak</span>
                </div>
                <div class="col-md-10">
                    <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" name="kontak" id="kontak">
                </div>
            </div>
          <button class="btn btn-primary">Submit</button>
        </form>
      </div>
    <% } %>     
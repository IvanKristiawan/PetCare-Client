<% layout('layouts/boilerplate') %> 

<style>
    a {
        color: inherit; /* blue colors for links too */
        text-decoration: inherit; /* no underline */
    }
    a:hover {
        color: inherit; /* blue colors for links too */
        text-decoration: inherit; /* no underline */
    }
    .animal-img {
        width: 100%;
        height: 280px;
    }
    .gray-text {
        color: rgb(95, 95, 95);
    }
    .animal-card {
        width: 16rem;
    }
    .animal-card:hover {
        box-shadow: 1px 2px 2px #A3A3A3;
    }
    @media (max-width: 500px) {
        .animal-card {
            width: 10rem;
        }
        .animal-img {
            width: 100%;
            height: 150px;
        }
    }
</style>

<div>
    <div class="row">
        <% for(let animal of listAnimal) {%>
            <div class="col-md-3 col-6 mt-3">
                <a href="/adopsi/<%= animal._id %>">
                    <div class="card animal-card">
                        <% if(animal.images[0]) {%> 
                            <img src="<%= animal.images[0].url %>" class="card-img-top img-handler animal-img">
                        <% } %>    
                        <div class="card-body">
                        <h5 class="card-title"><%= animal.nama %> / <%= animal.umur %></h5>
                        <p class="card-text">Jenis: <br><%= animal.kategori %></p>
                        </div>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item"><%= animal.jenisKelamin %></li>
                            <li class="list-group-item">Lokasi: <%= animal.location %></li>
                            <li class="list-group-item">Kontak: <%= animal.kontak %></li>
                            <li class="list-group-item gray-text"><%= animal.description.substring(0,25) %>...</li>
                        </ul>
                    </div>
                </a>
            </div>
        <% } %>
    </div>
</div>
<style>
    a {
        color: inherit;
        /* blue colors for links too */
        text-decoration: inherit;
        /* no underline */
    }
    .navbar {
        display: flex;
        justify-content: space-between;
        border-bottom: 1px solid #A3A3A3;
        font-size: 20px;
        font-weight: 300;
    }
    .navbar-img {
        width: 120px;
    }
    .navbar-wrapper {
        flex: 1;
    }
    .cart-img {
        width: 30px;
    }
    .hover-effect {
        margin-right: 40px;
        transition: box-shadow 200ms ease-out 100ms
    }
    .hover-effect:hover {
        box-shadow: inset 0 -5px 0 0 #B00000;
    }
    .navbar-brand-smallScreen {
        border-bottom: 1px solid #A3A3A3;
    }
    @media (max-width: 960px) {
        .largeScreen {
            display: none !important;
        }
        a {
            font-size: 13px;
        }
        .cart-img {
            width: 25px;
        }
    }
    @media (min-width: 960px) {
        .smallScreen {
            display: none !important;
        }
    }
</style>

<nav class="navbar navbar-expand-lg navbar-light bg-light largeScreen">
    <div class="container-fluid">
        <div class="navbar-wrapper">
            <a class="navbar-brand" href="/"><img src="https://res.cloudinary.com/dbtag5lau/image/upload/v1650278820/PetCare/icons/PetCareLogo.png" class="navbar-img"></a>
        </div>
        <div class="navbar-wrapper d-flex justify-content-center">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link active hover-effect" aria-current="page" href="/">Beranda</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active hover-effect" aria-current="page" href="/adopsi">Adopsi</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active hover-effect" aria-current="page" href="/aboutUs">Tentang Kami</a>
                </li>
            </ul>
        </div>
        <div class="navbar-wrapper d-flex justify-content-end">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <% if(!currentUser) {%>
                    <li class="nav-item">
                        <a class="nav-link active mr-3 account-txt" aria-current="page" href="/login">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active mr-3" aria-current="page" href="/daftar">Daftar</a>
                    </li>
                <% } else {%>
                    <li class="nav-item">
                        <a class="nav-link active mr-3" aria-current="page" href="/logout">Logout</a>
                    </li>
                <% } %>
                <li class="nav-item">
                    <a class="nav-link active mr-3" aria-current="page" href="/keranjang"><img src="https://res.cloudinary.com/dbtag5lau/image/upload/v1650278820/PetCare/icons/KeranjangLogo.png" class="cart-img"></a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<div class="smallScreen d-flex justify-content-between" style="background-color: #D7DBFF;">
    <% if(!currentUser) {%>
        <a class="nav-link active" aria-current="page" href="/login">Login</a>
        <a class="nav-link active" aria-current="page" href="/daftar">Daftar</a>
        <% } else { %>
            <a class="nav-link active" aria-current="page" href="/logout">Logout</a>
        <% } %>
        <a class="nav-link active" aria-current="page" href="/keranjang"><img src="https://res.cloudinary.com/dbtag5lau/image/upload/v1650278820/PetCare/icons/KeranjangLogo.png" class="cart-img"></a>
</div>

<div class="smallScreen navbar-brand-smallScreen">
    <a class="d-flex justify-content-center" href="/"><img src="https://res.cloudinary.com/dbtag5lau/image/upload/v1650278820/PetCare/icons/PetCareLogo.png" class="navbar-img"></a>
</div>

<div class="smallScreen d-flex justify-content-around mb-2">
    <a class="nav-link active mr-3 hover-effect" aria-current="page" href="/">Beranda</a>
    <a class="nav-link active mr-3 hover-effect" aria-current="page" href="/adopsi">Adopsi</a>
    <a class="nav-link active mr-3 hover-effect" aria-current="page" href="/aboutUs">Tentang Kami</a>
</div>
<% layout('layouts/boilerplate') %> 

<style>
    a {
        color: inherit; /* blue colors for links too */
        text-decoration: inherit; /* no underline */
    }
    a:hover {
        color: inherit; /* blue colors for links too */
        text-decoration: inherit; /* no underline */
    }
    button {
        background: none; 
        color: inherit;
        border: 1px solid #A3A3A3;
        border-radius: 5px;
        padding: 0;
        font: inherit;
        cursor: pointer;
        outline: inherit;
        box-shadow: 3px 5px 5px #A3A3A3;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }
    .jumbotron-container {
        display: flex;
        margin-top: 20px;
    }
    .text-wrapper {
        flex: 1;
        padding-top: 60px;
    }
    .img-wrapper {
        flex: 1;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    .img-sizing {
        width: 400px;
    }
    .title {
        font-size: 45px;
        font-weight: 500;
    }
    .description {
        font-size: 25px;
        font-weight: 300;
    }
    .btn-wrapper {
        margin-top: 50px;
    }
    .btn-style {
        width: 150px;
        height: 100px;
    }
    .btn-img {
        padding-top: 15px;
        width: 50px;
    }
    .main-btn {
        transition: 0.3s;
    }
    .main-btn:hover {
        background-color: #D7DBFF;
    }
    .margin-btn {
        margin-top: 30px;
    }
    @media (max-width: 800px) {
        br {
            display: none;
        }
        .jumbotron-container {
            display: flex;
            flex-direction: column;
            margin-top: 20px;
        }
        .img-sizing {
            width: 300px;
            padding-top: 20px;
        }
        .text-wrapper {
            padding-top: 0;
        }
        .btn-wrapper {
            align-items: center;
            justify-content: center;
            flex-direction: column;
        }
        .btn-style {
            margin-bottom: 20px;
        }
        .title {
            font-size: 30px;
            font-weight: 500;
        }
        .description {
            font-size: 20px;
            font-weight: 300;
        }
        .margin-btn {
            margin-top: 0;
        }
        .btn-style {
            width: 120px;
            height: 80px;
        }
        .btn-img {
            width: 30px;
        }
    }
</style>

<div class="container">
    <div class="jumbotron-container">
        <div class="text-wrapper">
            <h1 class="title">Kesehatan Hewan Online</h1>
            <p class="description">Chat dokter hewan, beli obat hewan, 
                <br> lokasi rumah sakit hewan, asuransi kesehatan 
                <br> hewan, adopsi hewan, dll</p>
        </div>
        <div class="img-wrapper">
            <img class="img-sizing" src="https://res.cloudinary.com/dbtag5lau/image/upload/v1649486683/PetCare/icons/MainLogo.png">
        </div>
    </div>
    <div class="btn-wrapper">
        <div class="row">
            <% if(isDokter == true) {%> 
                <div class="col-md-3 col-sm-6 col-6 margin-btn">
                    <a href="/dokter">
                        <button class="btn-style main-btn">
                            <img class="btn-img" src="https://res.cloudinary.com/dbtag5lau/image/upload/v1651536480/PetCare/icons/doctorLogoRed.png">
                            <p>Menu Dokter</p>
                        </button>
                    </a>
                </div>
            <% } %>     
            <div class="col-md-3 col-sm-6 col-6 margin-btn">
                <a href="/chat">
                    <button class="btn-style main-btn">
                        <img class="btn-img" src="https://res.cloudinary.com/dbtag5lau/image/upload/v1650278820/PetCare/icons/ChatLogo.png">
                        <p>Chat Dokter</p>
                    </button>
                </a>
            </div>
            <div class="col-md-3 col-sm-6 col-6 margin-btn">
                <a href="/beliObat">
                    <button class="btn-style main-btn">
                        <img class="btn-img" src="https://res.cloudinary.com/dbtag5lau/image/upload/v1650278821/PetCare/icons/BeliObatLogo.png">
                        <p>Beli Obat</p>
                    </button>
                </a>
            </div>
            <div class="col-md-3 col-sm-6 col-6 margin-btn">
                <a href="/lokasi">
                    <button class="btn-style main-btn">
                        <img class="btn-img" src="https://res.cloudinary.com/dbtag5lau/image/upload/v1650278819/PetCare/icons/LokasiLogo.png">
                        <p>Lokasi RSH</p>
                    </button>
                </a>
            </div>
            <div class="col-md-3 col-sm-6 col-6 margin-btn">
                <a href="/asuransi">
                    <button class="btn-style main-btn">
                        <img class="btn-img" src="https://res.cloudinary.com/dbtag5lau/image/upload/v1650278822/PetCare/icons/AsuransiLogo.png">
                        <p>Asuransi</p>
                    </button>
                </a>
            </div>
        </div>
    </div>
</div>
<% layout('layouts/boilerplate') %> 

<style>
    .register-container {
        width: 400px;
        min-height: 200px;
        border: 1px solid #C4C4C4;
        border-radius: 10px;
        box-shadow: 1px 2px 2px #A3A3A3;
    } 
    .input-sizing {
        width: 70%;
    }
    .btn-custom {
        color: #FF3232;
        border: 1px solid #FF3232;
    }
    .navbar-img-daftar {
        width: 200px;
    }
    .register-wrapper {
        margin-top: 30px;
        margin-bottom: 100px;
    }
</style>

<div>
    <div class="d-flex justify-content-center">
        <a class="navbar-brand" href="/"><img src="https://res.cloudinary.com/dbtag5lau/image/upload/v1650278820/PetCare/icons/PetCareLogo.png" class="navbar-img-daftar"></a>
    </div>
    <div class="d-flex justify-content-center register-wrapper">
        <div class="register-container">
            <h1 class="mb-4 d-flex justify-content-center mt-4">DAFTAR</h1>
            <form action="/daftar" class="validated-form needs-validation" method="POST" novalidate>
                <div class="d-flex justify-content-center">
                    <input id="username" name="username" type="text" class="form-control input-sizing mb-4" placeholder="Username" required>
                </div>
                <div class="d-flex justify-content-center">
                    <input id="email" name="email" type="email" class="form-control input-sizing mb-4" placeholder="Email" required>
                </div>
                <div class="d-flex justify-content-center">
                    <input id="password" name="password" type="password" class="form-control input-sizing mb-4" placeholder="Password" required> 
                </div>
                <div class="d-flex justify-content-center">
                    <a href="/daftar" class="center-btn mb-4"><button class="btn btn-custom" type="submit">Daftar</button></a>
                </div> 
            </form>
        </div>
    </div>
</div>

<script>
    // Example starter JavaScript for disabling form submissions if there are invalid fields
    (function () {
    'use strict'

    // Fetch all the forms we want to apply custom Bootstrap validation styles to
    var forms = document.querySelectorAll('.needs-validation')

    // Loop over them and prevent submission
    Array.prototype.slice.call(forms)
        .forEach(function (form) {
        form.addEventListener('submit', function (event) {
            if (!form.checkValidity()) {
            event.preventDefault()
            event.stopPropagation()
            }

            form.classList.add('was-validated')
        }, false)
        })
    })()
</script>